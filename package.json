{
  "type": "module",
  "version": "0.0.0",
  "main": "dist/index.js",
  "scripts": {
    "lint": "standardx -v \"./**/*.ts\"",
    "test": "esbuild --bundle test/index.ts | node --input-type=module | tap-arc",
    "build-tests": "esbuild test/index.ts --bundle --format=cjs --keep-names > test/test-bundle.js",
    "test-browser": "npm run lint && npm run build && npm run build-tests && npm run test-tape-run",
    "test-tape-run": "cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && esbuild src/index.ts --outdir=dist --tsconfig=tsconfig.build.json",
    "build-example": "mkdir -p ./public && rm -rf ./public/* && vite build",
    "start": "vite",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@preact/signals": "^1.2.1",
    "cojson": "^0.4.13",
    "jazz-autosub": "^0.4.13",
    "jazz-browser": "^0.4.15",
    "jazz-browser-auth-local": "^0.4.15"
  },
  "devDependencies": {
    "@nichoth/routes": "^3.0.7",
    "@nichoth/tapzero": "^0.8.0",
    "@preact/preset-vite": "^2.5.0",
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.15.18",
    "postcss-nesting": "^12.0.1",
    "preact": "^10.17.1",
    "route-event": "^4.1.10",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tape-run": "^10.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.9"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ]
    }
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "AGPL-3.0-or-later"
}
